<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('_bootstrap_meta')%>
    <!-- CSS rule for all <a> links -->
      <style>
        /* All <a> links color to white */
        a {
            color: white;
        }

        /* All headings to be bold */
        h1, h2, h3, h4, h5, h6 {
            font-weight: bold;
        }

        /* All labels to have a pitch-black color and strong font weight */
        label {
            color: #000000; /* Pitch-black color */
            font-weight: bold;
        }
    </style>
    <title>Schedule Interview</title>
  </head>

  <body style="background: linear-gradient(to bottom, #0000FF, #FFA500);">
    <%- include('_header') %>

    <form
      class="w-60 mx-auto mt-4"
      action="/company/schedule-interview"
      method="post"
      style="height: 70vh; display: flex; flex-direction: column; justify-content: space-between; align-items: center;"
    >
      <h3 style="margin: 10px;">Schedule Interview</h3>

      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <select
          class="form-select"
          aria-label="Default select example"
          name="id"
          id="name"
        >
        <option selected disabled>Select Student</option>

        <%for(let student of students){%>
        <option value="<%=student.id%>"><%= student.name %></option>
        <%}%>
      </select></select>
      </div>

      <div class="mb-3">
        <label for="company" class="form-label">Company</label>
        <input
          type="text"
          class="form-control"
          id="company"
          name="company"
        />
      </div>

      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input
          type="date"
          class="form-control"
          id="date"
          name="date"
        />
      </div>

          <button class="btn btn-primary align-self-center">
            Schedule Interview
          </button>
    </form>
    <%- include('_bootstrap_script')%>
  </body>
</html>
